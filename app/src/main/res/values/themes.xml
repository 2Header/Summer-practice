<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ver_3" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Ver_3.SplashTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Theme.Ver_3.StartScreans">
        <item name="android:windowBackground">@drawable/start_screans</item>
    </style>

    <style name="Theme.Ver_3.LogScrean">
        <item name="android:windowBackground">@drawable/log_sreen</item>
    </style>

    <style name="Theme.Ver_3.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Ver_3.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Ver_3.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>